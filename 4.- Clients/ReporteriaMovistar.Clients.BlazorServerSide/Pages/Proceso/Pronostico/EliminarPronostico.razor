@using ReporteriaMovistar.Application.Interfaces.Services.Data
@inject ISnackbar snackbar
@inject IDialogService dialogService
@inject IPronosticoService pronosticoService
@inject ILogExcepcionUsuarioService logExcepcionUsuarioService
@inject NavigationManager navigationManager

<MudDialog>
    <DialogContent>
        <MudText>¿Desea eliminar el pronóstico de '@this.Modelo.Tecnologia' del período @($"{this.Modelo.Periodo:MMMM yyyy}") (ID @this.Modelo.Id)?</MudText>
    </DialogContent>
    <DialogActions>
        <MudButton Variant="Variant.Filled" Color="Color.Error" OnClick="EliminarAsync">Si</MudButton>
        <MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="Cancelar">No</MudButton>
    </DialogActions>
</MudDialog>